{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "emitDeclarationOnly": true, // 只生成声明文件
    "jsx": "react-jsx",
    "paths": {
      "@mix-toolkit/utils": ["../utils/src"],
      "@mix-toolkit/hooks": ["../hooks/src"]
    }
  },
  "include": ["src/**/*", "*.d.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../utils" }, { "path": "../hooks" }]
}
